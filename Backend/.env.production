# Railway Production Environment
NODE_ENV=production
PORT=8080

# MongoDB Atlas (use the cloud connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rumera?retryWrites=true&w=majority

# JWT Secret (set this in Railway dashboard)
JWT_SECRET=your-secret-key-from-railway-env

# CORS - Update this with your Vercel domain
CORS_ORIGIN=https://rumera.vercel.app

# Backend URL (for internal references if needed)
BACKEND_URL=https://your-railway-deployment.railway.app
